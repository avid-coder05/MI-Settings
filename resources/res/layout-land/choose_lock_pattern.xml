<?xml version="1.0" encoding="utf-8"?>
<com.android.internal.widget.LinearLayoutWithDefaultTouchRecepient xmlns:android="http://schemas.android.com/apk/res/android" xmlns:settings="http://schemas.android.com/apk/res/settings"
    android:orientation="horizontal"
    android:id="@+id/topLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:gravity="center_vertical"
        android:layout_gravity="center_vertical"
        android:orientation="vertical"
        android:layout_width="310dp"
        android:layout_height="match_parent">
        <TextView
            android:textSize="@dimen/choose_lock_pattern_header_text_size"
            android:textColor="@color/default_text_color"
            android:gravity="center"
            android:id="@+id/headerText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/choose_lock_pattern_header_text"
            android:fontFamily="sans-serif-medium"/>
        <TextView
            android:textSize="13.8sp"
            android:textColor="@color/default_text_color"
            android:gravity="center"
            android:id="@+id/subHeaderText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="9.5dp"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <include layout="@layout/choose_lock_pattern_button"/>
        </RelativeLayout>
    </LinearLayout>
    <View
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"/>
    <com.android.settings.LockPatternView
        android:layout_gravity="center_vertical"
        android:id="@+id/lockPattern"
        style="@style/SecurityLockPatternView"/>
</com.android.internal.widget.LinearLayoutWithDefaultTouchRecepient>
