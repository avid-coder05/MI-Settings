<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:id="@+id/ruleitem"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="@dimen/miuix_preference_item_padding_start"
    android:paddingEnd="@dimen/miuix_preference_item_padding_end">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toStartOf="@+id/enabled"
        android:layout_alignParentStart="true">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:textAppearance="@style/Miuix.AppCompat.TextAppearance.PreferenceList"
                android:ellipsize="end"
                android:id="@+id/ruletitle"
                android:fadingEdge="horizontal"
                android:clickable="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:layout_centerVertical="true"/>
            <TextView
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:ellipsize="end"
                android:id="@+id/rulesummary"
                android:fadingEdge="horizontal"
                android:clickable="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:singleLine="true"
                android:layout_below="@+id/ruletitle"
                android:layout_alignParentStart="true"/>
        </RelativeLayout>
    </LinearLayout>
    <miuix.slidingwidget.widget.SlidingButton
        android:id="@+id/enabled"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"/>
</RelativeLayout>
