<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/card_icon"
        android:layout_width="24.7dp"
        android:layout_height="24.7dp"
        android:layout_marginBottom="5.45dp"/>
    <TextView
        android:id="@+id/card_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/CardInstructionsText"/>
    <TextView
        android:textSize="@dimen/card_key_words_text_size"
        android:gravity="start"
        android:id="@+id/card_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="1.45dp"
        android:fontFamily="mipro-medium"
        android:textAlignment="viewStart"
        android:layout_marginEnd="19.6dp"/>
</LinearLayout>
