<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="10dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:textSize="18sp"
        android:layout_gravity="center_horizontal"
        android:id="@+id/instruction_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"/>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <ImageView
            android:id="@+id/bluetooth_device_default"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/bluetooth_device_unlock_default"/>
        <ImageView
            android:id="@+id/bluetooth_device_confirmed"
            android:visibility="invisible"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/bluetooth_device_unlock_confirmed"/>
        <ImageView
            android:layout_gravity="center"
            android:id="@+id/bluetooth_device_light"
            android:background="@android:color/transparent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/bluetooth_device_light"/>
    </FrameLayout>
    <Button
        android:id="@+id/ok_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@android:string/ok"
        style="?android:attr/buttonBarButtonStyle"/>
</LinearLayout>
