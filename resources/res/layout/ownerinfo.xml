<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:paddingTop="20dp"
    android:scrollbars="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:gravity="center_vertical"
                android:id="@+id/owner_info_line_layout"
                android:background="?attr/preferenceItemBackground"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textAppearance="@style/Miuix.AppCompat.TextAppearance.PreferenceList"
                    android:gravity="start|center_vertical"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/show_owner_info_on_lockscreen_label"
                    android:layout_weight="1"/>
                <miuix.slidingwidget.widget.SlidingButton
                    android:id="@+id/show_owner_info_on_lockscreen_checkbox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <EditText
                android:id="@+id/owner_info_nickname"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="51dp"
                android:layout_marginTop="8dp"
                android:hint="@string/user_nickname"
                android:inputType="textCapWords"/>
            <EditText
                android:id="@+id/owner_info_edit_text"
                android:padding="8dp"
                android:layout_width="match_parent"
                android:layout_height="51dp"
                android:layout_marginTop="15dp"
                android:hint="@string/owner_info_settings_edit_text_hint"
                android:maxLength="20"
                android:inputType="textNoSuggestions"
                android:layout_marginStart="?android:attr/listPreferredItemPaddingLeft"
                android:layout_marginEnd="?android:attr/listPreferredItemPaddingRight"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"/>
            <LinearLayout
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp">
                <Button
                    android:id="@+id/cancel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/lockpassword_cancel_label"
                    android:layout_weight="1"/>
                <Button
                    android:id="@+id/save"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/lockpassword_ok_label"
                    android:layout_weight="1"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
