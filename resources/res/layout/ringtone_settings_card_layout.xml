<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:id="@+id/ringtone_settings_card"
    android:layout_width="match_parent"
    android:layout_height="@dimen/ringtone_settings_card_height"
    android:layout_marginTop="@dimen/card_ringtone_margin_top"
    android:layout_marginBottom="@dimen/card_ringtone_margin_bottom"
    android:paddingStart="@dimen/card_margin_edge"
    android:paddingEnd="@dimen/card_margin_edge">
    <com.android.settings.sound.coolsound.RingtoneItemNotification
        android:id="@+id/ringtone_notification"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"/>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_marginStart="@dimen/card_margin_edge">
        <com.android.settings.sound.coolsound.RingtoneItem
            android:id="@+id/ringtone_call"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="@dimen/card_margin_edge"
            android:layout_weight="1"/>
        <com.android.settings.sound.coolsound.RingtoneItem
            android:id="@+id/ringtone_alarm"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>
    </LinearLayout>
</LinearLayout>
