<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="@dimen/list_item_height"
    android:paddingStart="@dimen/state_edit_left_right_padding"
    android:paddingEnd="@dimen/state_edit_left_right_padding"
    android:layout_marginStart="@dimen/state_edit_left_right_margin"
    android:layout_marginEnd="@dimen/state_edit_left_right_margin">
    <TextView
        android:textAppearance="@style/Miuix.AppCompat.TextAppearance.PreferenceList"
        android:layout_gravity="center_vertical"
        android:id="@+id/text_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textAlignment="viewStart"/>
    <miuix.slidingwidget.widget.SlidingButton
        android:layout_gravity="center_vertical"
        android:id="@+id/sliding_button"
        android:focusable="false"
        android:clickable="false"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</LinearLayout>
