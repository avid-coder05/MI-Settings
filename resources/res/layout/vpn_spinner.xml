<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:id="@+id/spinner_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:weightSum="3"
    android:minHeight="@dimen/list_item_height"
    android:paddingStart="@dimen/state_edit_left_right_padding"
    android:paddingEnd="@dimen/state_edit_left_right_padding"
    android:layout_marginStart="@dimen/state_edit_left_right_margin"
    android:layout_marginEnd="@dimen/state_edit_left_right_margin">
    <TextView
        android:textAppearance="@style/Miuix.AppCompat.TextAppearance.PreferenceList"
        android:layout_gravity="start|center_vertical"
        android:id="@+id/spinner_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textAlignment="viewStart"/>
    <miuix.appcompat.widget.Spinner
        android:layout_gravity="end|center_vertical"
        android:id="@+id/right_spinner"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"/>
</LinearLayout>
