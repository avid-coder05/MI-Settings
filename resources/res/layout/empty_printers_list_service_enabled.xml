<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center"
    android:orientation="vertical"
    android:id="@+id/empty_printers_list_service_enabled"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="16dp">
    <ImageView
        android:id="@+id/icon"
        android:layout_width="74.18dp"
        android:layout_height="64.73dp"
        android:layout_marginBottom="23.64dp"
        android:src="@drawable/ic_printer_search"
        android:importantForAccessibility="no"/>
    <TextView
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/instructions_text_color"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="@string/print_searching_for_printers"/>
    <ProgressBar
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:indeterminate="true"
        android:importantForAccessibility="no"
        style="?attr/progressBarStyle"/>
</LinearLayout>
