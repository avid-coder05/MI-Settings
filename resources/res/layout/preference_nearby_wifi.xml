<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center_vertical"
    android:layout_gravity="center_vertical"
    android:paddingTop="@dimen/wifi_nearby_padding_top"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="@dimen/wifi_nearby_padding_start"
    android:paddingEnd="@dimen/wifi_nearby_padding__end">
    <TextView
        android:textSize="@dimen/wifi_custom_preference_title_size"
        android:ellipsize="middle"
        android:id="@android:id/title"
        android:fadingEdge="horizontal"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/wifi_custom_preference_title_margin"
        android:layout_marginBottom="@dimen/wifi_custom_preference_title_margin"
        android:singleLine="true"
        android:layout_weight="1"
        android:textAlignment="viewStart"/>
    <LinearLayout
        android:gravity="center"
        android:orientation="vertical"
        android:id="@+id/refresh_frame"
        android:layout_width="@dimen/preference_wifi_custom_widget_width"
        android:layout_height="match_parent"
        android:minWidth="@dimen/miuix_preference_widget_width"
        android:layout_marginEnd="@dimen/wifi_refresh_end_margin">
        <FrameLayout
            android:id="@+id/refresh_anim_bg"
            android:background="@drawable/wifi_refresh_background"
            android:layout_width="@dimen/wifi_custom_widget_background_width"
            android:layout_height="@dimen/wifi_custom_widget_background_width">
            <ImageView
                android:id="@+id/refresh_anim"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/wifi_refresh"
                android:scaleType="centerInside"/>
        </FrameLayout>
    </LinearLayout>
</LinearLayout>
