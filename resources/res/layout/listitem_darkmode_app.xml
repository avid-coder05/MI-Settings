<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:paddingLeft="25.5dp"
    android:paddingRight="29dp"
    android:layout_width="match_parent"
    android:layout_height="69.8dp"
    android:layout_marginLeft="3.6dp"
    style="@style/Widget.ListView.Item.DoubleLine">
    <ImageView
        android:layout_gravity="center_vertical"
        android:id="@+id/icon"
        android:layout_width="39.2dp"
        android:layout_height="39.2dp"/>
    <LinearLayout
        android:layout_gravity="center_vertical"
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp">
        <TextView
            android:textAppearance="@style/Miuix.AppCompat.TextAppearance.List.Primary"
            android:textSize="17.45sp"
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"/>
        <TextView
            android:textAppearance="@style/Miuix.AppCompat.TextAppearance.List.Secondary"
            android:id="@+id/summary"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"/>
    </LinearLayout>
    <miuix.slidingwidget.widget.SlidingButton
        android:layout_gravity="center_vertical"
        android:id="@+id/sliding_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</LinearLayout>
