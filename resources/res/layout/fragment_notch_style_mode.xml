<?xml version="1.0" encoding="utf-8"?>
<miuix.springback.view.SpringBackLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:scrollableView="@+id/scroll">
    <androidx.core.widget.NestedScrollView
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:layout_gravity="center_horizontal"
                android:id="@+id/notch_style_show_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/notch_style_margin_top">
                <ImageView
                    android:id="@+id/notch_style_show_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/notch_style_image_margin_bottom"
                    android:src="@drawable/notch_style_show"/>
                <RadioButton
                    android:id="@+id/notch_style_show"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/notch_style_show"
                    android:layout_below="@+id/notch_style_show_image"
                    android:layout_alignStart="@+id/notch_style_show_image"
                    android:layout_alignEnd="@+id/notch_style_show_image"
                    style="@style/Theme.Radio"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_gravity="center_horizontal"
                android:id="@+id/notch_style_status_bar_inside_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/notch_style_margin_top">
                <ImageView
                    android:id="@+id/notch_style_status_bar_inside_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/notch_style_image_margin_bottom"
                    android:src="@drawable/notch_style_status_bar_inside"/>
                <RadioButton
                    android:id="@+id/notch_style_status_bar_inside"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/notch_style_status_bar_inside"
                    android:layout_below="@+id/notch_style_status_bar_inside_image"
                    android:layout_alignStart="@+id/notch_style_status_bar_inside_image"
                    android:layout_alignEnd="@+id/notch_style_status_bar_inside_image"
                    style="@style/Theme.Radio"/>
            </RelativeLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</miuix.springback.view.SpringBackLayout>
