<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:id="@+id/footerLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/choose_unlock_password_footer_margin"
    android:baselineAligned="false"
    android:measureWithLargestChild="true"
    android:layout_marginStart="@dimen/choose_unlock_password_footer_margin"
    android:layout_marginEnd="@dimen/choose_unlock_password_footer_margin"
    style="?android:attr/buttonBarStyle">
    <Button
        android:id="@+id/footerLeftButton"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:text="@string/lockpattern_tutorial_cancel_label"
        android:maxLines="2"
        android:layout_weight="1"
        style="?android:attr/buttonBarButtonStyle"/>
    <Button
        android:layout_gravity="right"
        android:id="@+id/footerRightButton"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:text="@string/lockpattern_tutorial_continue_label"
        android:maxLines="2"
        android:layout_weight="1"
        android:layout_marginStart="@dimen/choose_unlock_password_footer_divider_width"
        style="?attr/buttonBarDefaultButtonStyle"/>
</LinearLayout>
