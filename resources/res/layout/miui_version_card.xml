<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingStart="@dimen/my_device_card_padding_start">
    <ImageView
        android:id="@+id/miui_logo_view"
        android:layout_width="@dimen/miui_logo_view_width"
        android:layout_height="@dimen/miui_logo_view_height"
        android:layout_marginTop="@dimen/miui_logo_view_margintop"
        android:src="@drawable/miui_version_logo"
        android:scaleType="fitXY"/>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/version_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/miui_logo_view">
        <TextView
            android:textSize="@dimen/card_key_words_text_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/miui_version_margin_top"
            android:text="@string/device_miui_version"
            android:includeFontPadding="false"
            android:fontFamily="mipro-medium"/>
        <TextView
            android:id="@+id/miui_version_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="1.82dp"
            android:includeFontPadding="false"
            android:textAlignment="viewStart"
            style="@style/CardInstructionsText"/>
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/update_hint"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_below="@+id/version_layout"
        android:alpha="0">
        <TextView
            android:textSize="@dimen/new_version_text_size"
            android:textColor="@color/need_update_text_color"
            android:id="@+id/update_hint_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/device_miui_version_update"
            android:includeFontPadding="false"
            android:layout_alignParentBottom="true"
            android:fontFamily="sans-serif-medium"/>
        <ImageView
            android:id="@+id/red_point"
            android:paddingTop="6dp"
            android:fadingEdge="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/update_hint_text"
            android:paddingStart="5dp"
            android:layout_toEndOf="@+id/update_hint_text"/>
    </RelativeLayout>
</RelativeLayout>
