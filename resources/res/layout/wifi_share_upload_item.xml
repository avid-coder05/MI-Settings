<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    style="@style/Widget.ListView.Item.DoubleLine">
    <TextView
        android:textAppearance="@style/Miuix.AppCompat.TextAppearance.PreferenceList"
        android:gravity="center_vertical"
        android:layout_gravity="center_vertical"
        android:id="@+id/title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"/>
    <Button
        android:textAppearance="@style/Miuix.AppCompat.TextAppearance.PreferenceList"
        android:textSize="13sp"
        android:gravity="center_vertical"
        android:layout_gravity="center_vertical"
        android:id="@+id/share_button"
        android:focusable="false"
        android:clickable="false"
        android:duplicateParentState="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/wifi_share_upload"
        style="@style/Widget.Button.Rect"/>
    <TextView
        android:textAppearance="@style/Miuix.AppCompat.TextAppearance.PreferenceList"
        android:gravity="center_vertical"
        android:layout_gravity="center_vertical"
        android:id="@+id/share_text"
        android:visibility="gone"
        android:duplicateParentState="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/wifi_share_upload_finish"/>
</LinearLayout>
