<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:background="@drawable/card_shape_corner"
    android:paddingTop="18.3dp"
    android:paddingBottom="18.3dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingStart="15.8dp">
    <ImageView
        android:layout_gravity="center_vertical"
        android:id="@+id/ringtone_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:layout_gravity="center_vertical"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="12.6dp">
        <TextView
            android:textSize="@dimen/card_key_words_text_size"
            android:textColor="@color/ringtone_item_title_color"
            android:ellipsize="end"
            android:id="@+id/ringtone_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:layout_centerVertical="true"
            android:fontFamily="mipro-medium"/>
        <TextView
            android:textSize="@dimen/card_instructions_text_size"
            android:textColor="@color/ringtone_item_value_color"
            android:ellipsize="end"
            android:id="@+id/ringtone_value"
            android:scrollbars="none"
            android:fadingEdge="none"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="1.5dp"
            android:singleLine="true"
            android:layout_centerVertical="true"/>
    </LinearLayout>
</LinearLayout>
