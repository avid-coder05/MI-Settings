<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:id="@+id/device_name_card_layout"
        android:layout_width="match_parent"
        android:layout_height="94.9dp"
        android:paddingStart="@dimen/card_padding_start"
        android:paddingEnd="@dimen/card_padding_start">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="@dimen/card_key_words_text_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/device_name"
                android:includeFontPadding="false"
                android:fontFamily="mipro-medium"/>
            <TextView
                android:ellipsize="end"
                android:id="@+id/my_device_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5.45dp"
                android:maxLines="2"
                android:includeFontPadding="false"
                style="@style/CardInstructionsText"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
