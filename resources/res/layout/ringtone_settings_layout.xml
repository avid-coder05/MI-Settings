<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="@dimen/card_margin_edge"
    android:paddingEnd="@dimen/card_margin_edge">
    <com.android.settings.sound.coolsound.RingtoneGridView
        android:id="@+id/grid_view"
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/card_margin_actionbar"
        android:layout_marginBottom="10.9dp"
        android:listSelector="@android:color/transparent"
        android:horizontalSpacing="@dimen/card_margin_edge"
        android:verticalSpacing="@dimen/card_margin_edge"
        android:numColumns="2"/>
</RelativeLayout>
