<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/contentPanel"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:textStyle="bold"
        android:layout_gravity="center_vertical"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/wifi_assistant_prompt_checkbox"
        android:layout_weight="2.4"
        android:textDirection="locale"
        android:layout_marginStart="@dimen/wifi_assistant_horizontal_margin"
        android:layout_marginEnd="@dimen/wifi_assistant_horizontal_margin"
        style="?android:attr/textAppearanceLarge"/>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1">
        <miuix.slidingwidget.widget.SlidingButton
            android:layout_gravity="right"
            android:id="@+id/inquiry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/wifi_assistant_horizontal_margin"/>
    </LinearLayout>
</LinearLayout>
