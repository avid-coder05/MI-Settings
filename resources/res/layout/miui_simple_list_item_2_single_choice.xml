<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:background="@drawable/keyboard_layout_dialog_list_item_background"
    android:layout_width="match_parent"
    android:layout_height="?android:attr/listPreferredItemHeight"
    android:minHeight="?android:attr/listPreferredItemHeight">
    <RadioButton
        android:gravity="center_vertical"
        android:id="@+id/android_radio"
        android:focusable="false"
        android:clickable="false"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"/>
    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:duplicateParentState="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginStart="15dp">
        <miuix.androidbasewidget.widget.CheckedTextView
            android:textAppearance="@style/Miuix.AppCompat.TextAppearance.AlertDialogListItem.SingleChoice"
            android:ellipsize="marquee"
            android:gravity="start|center_vertical"
            android:id="@android:id/text1"
            android:duplicateParentState="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"/>
        <TextView
            android:textAppearance="@style/Miuix.AppCompat.TextAppearance.Widget.List.Secondary"
            android:ellipsize="marquee"
            android:gravity="start|center_vertical"
            android:id="@android:id/text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"/>
    </LinearLayout>
</LinearLayout>
