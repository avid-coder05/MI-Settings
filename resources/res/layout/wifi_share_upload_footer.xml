<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:textAppearance="@style/Miuix.AppCompat.TextAppearance.List.Secondary.Preference"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:id="@+id/wifi_share_add_summary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/wifi_share_add_summary"/>
    <Button
        android:textAppearance="@style/Miuix.AppCompat.TextAppearance.PreferenceList"
        android:gravity="center"
        android:id="@+id/wifi_share_action"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        style="@style/Widget.Button.Negative"/>
</LinearLayout>
