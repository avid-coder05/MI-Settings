<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:paddingTop="16dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:divider="?android:attr/dividerHorizontal"
    android:measureWithLargestChild="true"
    android:showDividers="beginning"
    style="?android:attr/buttonBarStyle">
    <Button
        android:textStyle="bold"
        android:layout_gravity="left"
        android:id="@+id/footerLeftButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/choose_unlock_password_footer_margin"
        android:text="@string/lockpattern_tutorial_cancel_label"
        android:maxLines="2"
        android:layout_weight="1"
        android:layout_marginStart="@dimen/choose_unlock_password_footer_margin"/>
    <Button
        android:textStyle="bold"
        android:layout_gravity="right"
        android:id="@+id/footerRightButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/choose_unlock_password_footer_margin"
        android:text="@string/lockpattern_tutorial_continue_label"
        android:maxLines="2"
        android:layout_weight="1"
        android:layout_marginStart="@dimen/choose_unlock_password_footer_margin"
        android:layout_marginEnd="@dimen/choose_unlock_password_footer_margin"/>
</LinearLayout>
