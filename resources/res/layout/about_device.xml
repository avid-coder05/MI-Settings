<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/kronos_info"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView
        android:id="@+id/phone_image"
        android:layout_width="100dp"
        android:layout_height="205dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="30dp"
        android:layout_marginStart="30dp"
        app:cardCornerRadius="18dp"
        app:cardElevation="0dp"
        app:strokeColor="?android:attr/textColorPrimary"
        app:strokeWidth="3dp">
        <com.android.utils.aboutWallpaperView
            android:gravity="center"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:contentDescription="@null"
            android:elevation="0dp"/>
    </androidx.cardview.widget.CardView>
    <LinearLayout
        android:gravity="center"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="30dp"
        android:layout_centerVertical="true"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="26dp"
        android:layout_toEndOf="@+id/phone_image">
        <TextView
            android:textSize="12sp"
            android:textColor="?android:attr/textColorPrimary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:text="meme base rom"
            android:textAllCaps="true"
            android:fontFamily="sans-serif-medium"/>
        <TextView
            android:textSize="12.5sp"
            android:textColor="?android:attr/textColorSecondary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="14dp"
            android:text="13.0.14 EU"
            android:lineSpacingMultiplier="1.3"
            android:fontFamily="sans-serif-book"/>
        <TextView
            android:textSize="12sp"
            android:textColor="?android:attr/textColorPrimary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:text="Chozen Os"
            android:textAllCaps="true"
            android:fontFamily="sans-serif-medium"/>
        <TextView
            android:textColor="?android:attr/textColorSecondary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="14dp"
            android:text="Gaming Edition V4"
            android:lineSpacingMultiplier="1.3"
            android:fontFamily="sans-serif-book"/>
        <TextView
            android:textSize="12sp"
            android:textColor="?android:attr/textColorPrimary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:text="Maintainer"
            android:textAllCaps="true"
            android:fontFamily="sans-serif-medium"/>
        <TextView
            android:textColor="?android:attr/textColorSecondary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="14dp"
            android:text="AkishGod"
            android:lineSpacingMultiplier="1.3"
            android:fontFamily="sans-serif-book"/>
        <TextView
            android:textSize="12sp"
            android:textColor="?android:attr/textColorPrimary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:text="Support"
            android:textAllCaps="true"
            android:fontFamily="sans-serif-medium"/>
        <TextView
            android:id="@+id/tggroup"
            android:textColor="?android:attr/textColorSecondary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:autoLink="web"
            android:text="https://t.me/ChozenOs"
            android:lineSpacingMultiplier="1.3"
            android:fontFamily="sans-serif-book"/>
    </LinearLayout>
</RelativeLayout>
