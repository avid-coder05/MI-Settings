<?xml version="1.0" encoding="utf-8"?>
<miuix.springback.view.SpringBackLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:scrollableView="@+id/scrollview">
    <miuix.core.widget.NestedScrollView
        android:id="@+id/scrollview"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <View
                android:id="@+id/lock_none"
                android:layout_width="1px"
                android:layout_height="1px"/>
            <View
                android:id="@+id/lock_pin"
                android:layout_width="1px"
                android:layout_height="1px"/>
            <FrameLayout
                android:scrollbarAlwaysDrawVerticalTrack="true"
                android:id="@+id/prefs_container"
                android:clipToPadding="false"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/choose_unlock_item_top_margin"
                android:drawSelectorOnTop="false"
                android:cacheColorHint="@android:color/transparent"
                android:layout_marginStart="@dimen/choose_unlock_item_margin"
                android:layout_marginEnd="@dimen/choose_unlock_item_margin"/>
            <TextView
                android:textSize="@dimen/choose_unlock_hint_text_size"
                android:textColor="@color/choose_password_forget_text_color_light"
                android:id="@+id/hint_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/choose_unlock_hint_text_top_margin"
                android:layout_marginStart="@dimen/list_common_padding"
                android:layout_marginEnd="@dimen/list_common_padding"/>
            <View
                android:layout_width="1px"
                android:layout_height="@dimen/choose_unlock_below_list"/>
            <FrameLayout
                android:gravity="center_vertical"
                android:id="@+id/visible_pattern_layout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/turn_off_password_height">
                <TextView
                    android:textAppearance="@style/Miuix.AppCompat.TextAppearance.PreferenceList"
                    android:textSize="@dimen/provision_step_text_size"
                    android:gravity="center_vertical"
                    android:layout_gravity="center_vertical"
                    android:id="@+id/visible_pattern_title"
                    android:background="?attr/preferenceItemBackground"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/lockpattern_settings_enable_visible_pattern_title"
                    android:fontFamily="mipro-medium"
                    android:textDirection="locale"
                    android:paddingStart="@dimen/list_common_padding"/>
                <miuix.slidingwidget.widget.SlidingButton
                    android:layout_gravity="end|center_vertical"
                    android:id="@+id/visible_pattern_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/list_common_padding"/>
            </FrameLayout>
            <TextView
                android:textAppearance="@style/Miuix.AppCompat.TextAppearance.PreferenceList"
                android:textSize="@dimen/provision_step_text_size"
                android:textColor="@color/turn_off_password_color"
                android:gravity="start|center_vertical"
                android:id="@+id/turn_off_password"
                android:background="?attr/preferenceItemBackground"
                android:layout_width="match_parent"
                android:layout_height="@dimen/turn_off_password_height"
                android:text="@string/turn_off_keyguard_password_title"
                android:fontFamily="mipro-medium"
                android:textDirection="locale"
                android:paddingStart="@dimen/list_common_padding"/>
        </LinearLayout>
    </miuix.core.widget.NestedScrollView>
</miuix.springback.view.SpringBackLayout>
