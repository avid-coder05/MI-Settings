<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <com.android.settings.display.ScreenColorBitMapView
        android:layout_gravity="center_horizontal"
        android:id="@+id/screen_color_image"
        android:focusable="true"
        android:layout_width="@dimen/screen_color_preview_diameter_new"
        android:layout_height="@dimen/screen_color_preview_diameter_new"
        android:layout_marginTop="12px"
        android:src="@drawable/screen_color_preview"
        android:scaleType="fitCenter"
        android:layout_centerHorizontal="true"
        android:contentDescription="@string/adjust_temperature_title"/>
    <miuix.miuixbasewidget.widget.FilterSortView
        android:id="@+id/filter_sort_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="17.1dp"
        android:layout_below="@+id/screen_color_image"
        android:layout_marginStart="25.45dp"
        android:layout_marginEnd="25.45dp">
        <view
            android:id="@+id/nature_color"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/nature_color"
            app:layout_constraintEnd_toStartOf="@+id/warm_color"
            app:layout_constraintHorizontal_weight="2"
            app:layout_constraintStart_toStartOf="parent"
            class="miuix.miuixbasewidget.widget.FilterSortView$TabView"/>
        <view
            android:id="@+id/warm_color"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/warm_color"
            app:layout_constraintEnd_toStartOf="@+id/cool_color"
            app:layout_constraintHorizontal_weight="2"
            app:layout_constraintStart_toEndOf="@+id/nature_color"
            class="miuix.miuixbasewidget.widget.FilterSortView$TabView"/>
        <view
            android:id="@+id/cool_color"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/cool_color"
            app:layout_constraintEnd_toStartOf="@+id/custom_color"
            app:layout_constraintHorizontal_weight="2"
            app:layout_constraintStart_toEndOf="@+id/warm_color"
            class="miuix.miuixbasewidget.widget.FilterSortView$TabView"/>
        <view
            android:id="@+id/custom_color"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/custom_color"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_weight="2"
            app:layout_constraintStart_toEndOf="@+id/cool_color"
            class="miuix.miuixbasewidget.widget.FilterSortView$TabView"/>
    </miuix.miuixbasewidget.widget.FilterSortView>
</RelativeLayout>
