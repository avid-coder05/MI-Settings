<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/gxzw_anim_background"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:background="@drawable/shape_gxzw_anim_preview_bg"
        android:layout_width="289dp"
        android:layout_height="578dp"
        android:layout_marginBottom="130dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="101dp"
            android:layout_centerHorizontal="true"
            android:layoutDirection="ltr">
            <TextView
                android:textSize="58sp"
                android:textColor="#ffffffff"
                android:layout_gravity="center"
                android:id="@+id/horizontal_hour"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:letterSpacing="0.03"/>
            <TextView
                android:textSize="58sp"
                android:textColor="#ffffffff"
                android:layout_gravity="center"
                android:id="@+id/horizontal_dot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/digital_clock_dot"
                android:letterSpacing="0.03"/>
            <TextView
                android:textSize="58sp"
                android:textColor="#ffffffff"
                android:layout_gravity="center"
                android:id="@+id/horizontal_min"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:letterSpacing="0.03"/>
        </LinearLayout>
        <com.android.settings.MutedVideoView
            android:id="@+id/gxzw_anim_preview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"/>
    </RelativeLayout>
    <RadioGroup
        android:orientation="horizontal"
        android:id="@+id/gxzw_anim_radiogroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="31dp"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"/>
</RelativeLayout>
