<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <RelativeLayout
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/privacy_funciotn_icon_top_margin">
                <ImageView
                    android:layout_gravity="center"
                    android:id="@+id/function_specific_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <ImageView
                    android:id="@+id/full_down"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="213dp"
                    android:src="@drawable/privacy_password_down"
                    android:layout_marginStart="5dp"
                    android:layout_toEndOf="@+id/function_specific_icon"/>
            </RelativeLayout>
            <TextView
                android:textSize="13sp"
                android:textColor="@color/transparent_60_balck"
                android:gravity="center"
                android:id="@+id/function_specific"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:layout_marginStart="23dp"
                android:layout_marginEnd="23dp"/>
        </LinearLayout>
    </ScrollView>
    <Button
        android:id="@+id/use_privacy_password_immediate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/privacy_function_button_bottom_margin"
        android:text="@string/use_privacy_password_immediate"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="23dp"
        android:layout_marginEnd="23dp"/>
</LinearLayout>
