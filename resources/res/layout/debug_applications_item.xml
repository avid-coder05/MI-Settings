<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:background="@drawable/list_item_bg_dialog"
    android:paddingLeft="20dp"
    android:focusable="false"
    android:clickable="false"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:layout_gravity="center_vertical"
        android:id="@+id/app_icon"
        android:layout_width="@dimen/application_icon_size"
        android:layout_height="@dimen/application_icon_size"
        android:layout_marginRight="11dp"
        android:scaleType="fitCenter"/>
    <LinearLayout
        android:layout_gravity="center_vertical"
        android:orientation="vertical"
        android:layout_width="0px"
        android:layout_height="wrap_content"
        android:layout_weight="1">
        <TextView
            android:textAppearance="@style/Miuix.AppCompat.TextAppearance.PreferenceList"
            android:ellipsize="marquee"
            android:id="@+id/app_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"/>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:baselineAlignedChildIndex="0">
            <TextView
                android:textAppearance="@style/Miuix.AppCompat.TextAppearance.List.Secondary.Preference"
                android:layout_gravity="center"
                android:id="@+id/app_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>
            <TextView
                android:textAppearance="@style/Miuix.AppCompat.TextAppearance.List.Secondary.Preference"
                android:layout_gravity="center"
                android:id="@+id/app_disabled"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/disabled"
                android:layout_weight="0"/>
        </LinearLayout>
    </LinearLayout>
    <CheckBox
        android:layout_gravity="center_vertical"
        android:id="@+id/app_on_sdcard"
        android:focusable="false"
        android:visibility="gone"
        android:clickable="false"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"/>
</LinearLayout>
