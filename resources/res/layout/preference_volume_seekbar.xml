<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="@dimen/miuix_appcompat_list_preferred_item_height_large"
    android:paddingEnd="?android:attr/scrollbarSize">
    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:id="@+id/title_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="14.2dp"
        android:layout_marginBottom="@dimen/title_layout_bottom_margin"
        android:paddingStart="@dimen/title_layout_padding_left"
        android:paddingEnd="@dimen/volumn_horizontal_edge">
        <com.android.settings.sound.VolumeStreamStateView
            android:layout_gravity="center"
            android:id="@android:id/icon"
            android:layout_width="25.1dp"
            android:layout_height="21.8dp"/>
        <TextView
            android:textSize="@dimen/key_words_text_size"
            android:ellipsize="marquee"
            android:id="@android:id/title"
            android:fadingEdge="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="mipro-medium"
            android:layout_marginStart="@dimen/seekbar_title_left_margin"/>
    </LinearLayout>
    <miuix.androidbasewidget.widget.SeekBar
        android:id="@+id/seekbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/volume_seekbar_margin_bottom"
        android:progressDrawable="@drawable/sound_seekbar_style"
        android:layout_marginStart="@dimen/title_layout_padding_left"
        android:layout_marginEnd="@dimen/title_layout_padding_left"/>
</LinearLayout>
