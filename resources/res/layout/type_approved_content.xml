<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:textColor="@color/black"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/wifi_type_approval_dialog_title"
        style="@android:style/TextAppearance.Medium"/>
    <TextView
        android:textColor="@color/transparent_50_balck"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/wifi_type_approval"
        style="@android:style/TextAppearance.Medium"/>
    <View
        android:gravity="center"
        android:background="@color/type_approved_dialog_title_divider"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="23dp"
        android:layout_marginBottom="33dp"/>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:src="@drawable/type_approved_logo"
        android:contentDescription="@null"/>
</LinearLayout>
