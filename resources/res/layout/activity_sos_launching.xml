<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#881f1416"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:layout_above="@+id/counting_down"
        android:layout_centerHorizontal="true">
        <com.android.settings.emergency.ui.view.CircleProgressBar
            android:layout_gravity="center"
            android:id="@+id/sos_progressbar"
            android:layout_width="200dp"
            android:layout_height="200dp"/>
        <TextView
            android:textSize="30sp"
            android:textColor="#ffffffff"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/miui_sos_launching_title"/>
    </FrameLayout>
    <TextView
        android:textColor="#ffffffff"
        android:id="@+id/counting_down"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"/>
    <TextView
        android:textSize="12.67sp"
        android:textColor="#ffffffff"
        android:gravity="center"
        android:id="@+id/sos_cancel"
        android:background="@drawable/sos_cancel_button"
        android:layout_width="wrap_content"
        android:layout_height="42dp"
        android:layout_marginBottom="40dp"
        android:minWidth="94.67dp"
        android:text="@android:string/cancel"
        android:singleLine="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:paddingStart="3dp"
        android:paddingEnd="3dp"/>
</RelativeLayout>
