<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="12.8dp"
    android:paddingEnd="12.8dp">
    <ViewFlipper
        android:id="@+id/view_filpper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:layout_gravity="center_horizontal"
        android:id="@+id/show_page_position_layout"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp">
        <View
            android:background="@drawable/screen_enhance_engine_view_count_circle"
            android:layout_width="15dp"
            android:layout_height="15dp"/>
        <View
            android:background="@drawable/screen_enhance_engine_view_count_circle"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginStart="5dp"/>
        <View
            android:background="@drawable/screen_enhance_engine_view_count_circle"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginStart="5dp"/>
        <View
            android:background="@drawable/screen_enhance_engine_view_count_circle"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginStart="5dp"/>
        <View
            android:background="@drawable/screen_enhance_engine_view_count_circle"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginStart="5dp"/>
    </LinearLayout>
    <TextView
        android:textSize="13.8sp"
        android:textColor="@color/normal_summary_color"
        android:layout_gravity="center_horizontal"
        android:id="@+id/screen_enhance_engine_top_summary"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10.9dp"
        android:fontFamily="mipro-medium"/>
</LinearLayout>
