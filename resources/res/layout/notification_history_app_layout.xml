<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:orientation="horizontal"
        android:id="@+id/app_header"
        android:background="@drawable/button_ripple_radius"
        android:paddingTop="20dp"
        android:paddingBottom="18dp"
        android:clipChildren="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="16dp">
        <ImageView
            android:layout_gravity="start|center_vertical"
            android:id="@+id/icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:scaleType="centerInside"
            android:layout_centerVertical="true"
            android:layout_marginEnd="14dp"/>
        <LinearLayout
            android:layout_gravity="center_vertical"
            android:orientation="vertical"
            android:id="@+id/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/icon">
            <TextView
                android:textAppearance="@android:style/TextAppearance.DeviceDefault.Notification.Time"
                android:layout_gravity="center_vertical"
                android:id="@+id/label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:textAppearance="@android:style/TextAppearance.DeviceDefault.ListItemSecondary"
                android:layout_gravity="start|center_vertical"
                android:id="@+id/count"
                android:paddingTop="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textDirection="locale"/>
        </LinearLayout>
        <include
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            layout="@android:layout/notification_material_media_seekbar"/>
    </RelativeLayout>
    <View
        android:background="?android:attr/listDivider"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <com.android.settings.notification.history.NotificationHistoryRecyclerView
        android:id="@+id/notification_list"
        android:scrollbars="none"
        android:clipChildren="true"
        android:clipToPadding="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:importantForAccessibility="yes"/>
</LinearLayout>
