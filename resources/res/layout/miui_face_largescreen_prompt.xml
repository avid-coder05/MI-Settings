<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@android:color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/back_image"
        android:visibility="gone"
        android:layout_width="@dimen/miui_face_enroll_back_linear_width"
        android:layout_height="@dimen/miui_face_enroll_back_linear_height">
        <ImageView
            android:layout_gravity="center_vertical"
            android:layout_width="@dimen/miui_face_enroll_back_image_width"
            android:layout_height="@dimen/miui_face_enroll_back_image_height"
            android:src="@drawable/face_input_back"
            android:scaleType="center"
            android:layout_marginStart="@dimen/miui_face_enroll_back_image_start"/>
    </LinearLayout>
    <TextureView
        android:layout_gravity="center_horizontal"
        android:id="@+id/miui_face_input_prompt_video"
        android:layout_width="@dimen/miui_face_prompt_video_width"
        android:layout_height="@dimen/miui_face_prompt_video_height"
        android:layout_marginTop="@dimen/miui_face_enroll_prompt_video_top"/>
    <TextView
        android:textSize="@dimen/miui_face_enroll_introduction_title_text_size"
        android:textColor="@color/miui_face_input_normal_text_color"
        android:layout_gravity="center_horizontal"
        android:id="@+id/miui_face_input_prompt_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/miui_face_enroll_introduction_title_top"
        android:text="@string/face_unlock_prompt"
        android:fontFamily="mipro-regular"/>
</LinearLayout>
