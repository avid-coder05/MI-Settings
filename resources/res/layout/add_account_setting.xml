<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/main_page_background"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/pvc_add_account_top_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/top_account_actionBar">
        <RelativeLayout
            android:id="@+id/top_actionBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/back_button_alight_top">
            <TextView
                android:id="@+id/pvc_add_account_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/miuix_appcompat_action_bar_back_light"
                android:paddingStart="@dimen/back_button_margin_start"/>
            <TextView
                android:textColor="@color/unlock_text_title"
                android:id="@+id/pvc_add_account_title_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/privacy_password_add_account_setting"
                style="@style/ActionBarTitleTextPadding"/>
        </RelativeLayout>
    </RelativeLayout>
    <LinearLayout
        android:gravity="center"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">
        <ImageView
            android:id="@+id/pvc_icon"
            android:layout_width="65dp"
            android:layout_height="65dp"/>
        <TextView
            android:textSize="15sp"
            android:textColor="@color/account_info_text_color"
            android:id="@+id/pvc_account_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="17dp"/>
        <TextView
            android:textSize="13sp"
            android:textColor="@color/account_info_text_color"
            android:gravity="center"
            android:id="@+id/pvc_add_account_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="27dp"
            android:text="@string/privacy_password_add_account_info"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"/>
        <TextView
            android:textColor="@color/account_info_text_color"
            android:gravity="center"
            android:id="@+id/pvc_exit_account_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="9dp"
            android:text="@string/privacy_password_exit_account_info"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android.textSize="12sp"/>
    </LinearLayout>
    <include layout="@layout/privacy_password_choose_lock_pattern_button"/>
</LinearLayout>
