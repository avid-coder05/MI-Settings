<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">
    <PreferenceCategory android:key="headsetKeyConfig">
        <com.android.settingslib.miuisettings.preference.miuix.DropDownPreference
            android:title="@string/miheadset_double_click_left"
            android:key="left_double"
            app:entries="@array/double_tone_entries"
            app:entryValues="@array/double_tone_entry_values"/>
        <com.android.settingslib.miuisettings.preference.miuix.DropDownPreference
            android:title="@string/miheadset_double_click_right"
            android:key="right_double"
            app:entries="@array/double_tone_entries"
            app:entryValues="@array/double_tone_entry_values"/>
        <com.android.settingslib.miuisettings.preference.miuix.DropDownPreference
            android:title="@string/miheadset_key_config_triple_left"
            android:key="left_triple"
            app:entries="@array/triple_tone_entries"
            app:entryValues="@array/triple_tone_entry_values"/>
        <com.android.settingslib.miuisettings.preference.miuix.DropDownPreference
            android:title="@string/miheadset_key_config_triple_right"
            android:key="right_triple"
            app:entries="@array/triple_tone_entries"
            app:entryValues="@array/triple_tone_entry_values"/>
        <com.android.settingslib.miuisettings.preference.miuix.DropDownPreference
            android:title="@string/miheadset_key_config_press_left"
            android:key="long_press_left_headset"
            app:entries="@array/long_press_entries_left_TWS_K77s"
            app:entryValues="@array/double_tone_entry_values"
            app:showRightArrow="true"/>
        <com.android.settingslib.miuisettings.preference.miuix.DropDownPreference
            android:title="@string/miheadset_key_config_press_right"
            android:key="long_press_right_headset"
            app:entries="@array/long_press_entries_right_TWS_K77s"
            app:entryValues="@array/double_tone_entry_values"
            app:showRightArrow="true"/>
    </PreferenceCategory>
</PreferenceScreen>
