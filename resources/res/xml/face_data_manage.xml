<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory
        android:title="@string/multi_face_list"
        android:key="delete_face_data">
        <com.android.settingslib.miuisettings.preference.Preference
            android:persistent="false"
            android:title="@string/face_data_manage_delete_msg"
            android:key="delete_face_data_recoginition"/>
    </PreferenceCategory>
    <PreferenceCategory
        android:title="@string/multi_face_list"
        android:key="multi_face_list"/>
    <PreferenceCategory
        android:title="@string/face_data_apply_for_category_title"
        android:key="apply_face_data">
        <com.android.settingslib.miuisettings.preference.CheckBoxPreference
            android:persistent="false"
            android:title="@string/face_data_manage_unlock_title"
            android:key="apply_face_data_lock"
            android:summary="@string/face_data_manage_unlock_msg"/>
    </PreferenceCategory>
    <PreferenceCategory
        android:title="@string/face_unlock_category_title"
        android:key="lock_screen_face_data">
        <com.android.settingslib.miuisettings.preference.CheckBoxPreference
            android:persistent="false"
            android:title="@string/face_unlock_success_stay_screen_title"
            android:key="face_unlock_success_stay_screen"
            android:summary="@string/face_unlock_success_stay_screen_msg"/>
        <com.android.settingslib.miuisettings.preference.CheckBoxPreference
            android:persistent="false"
            android:title="@string/face_unlock_success_show_message_title"
            android:key="face_unlock_success_show_message"
            android:summary="@string/face_unlock_success_show_message_msg"/>
        <com.android.settingslib.miuisettings.preference.CheckBoxPreference
            android:persistent="false"
            android:title="@string/face_unlock_by_notification_screen_on_title"
            android:key="face_unlock_by_notification_screen_on"
            android:summary="@string/face_unlock_by_notification_screen_on_msg"/>
    </PreferenceCategory>
</PreferenceScreen>
