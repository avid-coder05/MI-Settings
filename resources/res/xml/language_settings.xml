<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:settings="http://schemas.android.com/apk/res/com.android.settings" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:settingslib="http://schemas.android.com/apk/res-auto"
    android:title="@string/language_keyboard_settings_title"
    android:key="language_keyboard_settings">
    <PreferenceCategory android:title="@string/phone_language"/>
    <com.android.settingslib.miuisettings.preference.ValuePreference
        android:title="@string/phone_language"
        android:key="phone_language"
        android:fragment="com.android.settings.MiuiLocalePicker"/>
    <com.android.settingslib.miuisettings.preference.Preference
        android:title="@string/user_dict_settings_title"
        android:key="key_user_dictionary_settings"
        settingslib:showRightArrow="true"/>
    <PreferenceCategory
        android:title="@string/keyboard_settings_category"
        android:key="keyboard_settings_category">
        <com.android.settingslib.miuisettings.preference.miuix.DropDownPreference
            android:title="@string/current_input_method"
            android:key="current_input_method"/>
        <com.android.settingslib.miuisettings.preference.ValuePreference
            android:title="@string/current_input_method"
            android:key="current_input_method_cn"/>
        <com.android.settingslib.miuisettings.preference.Preference
            android:title="@string/input_method_manage"
            android:fragment="com.android.settings.inputmethod.AvailableVirtualKeyboardFragment"/>
        <com.android.settingslib.miuisettings.preference.ValuePreference
            android:title="@string/security_input"
            android:key="miui_security_ime"
            android:summary="@string/security_input_hint"
            android:fragment="com.android.settings.inputmethod.SecurityIMESettingFragment"/>
        <com.android.settingslib.miuisettings.preference.CheckBoxPreference
            android:title="@string/keyboard_skin_follow_system_enable"
            android:key="keyboard_skin_follow_system_enable"/>
    </PreferenceCategory>
    <PreferenceCategory
        android:title="@string/full_screen_keyboard_settings"
        android:key="full_screen_keyboard_optimization">
        <com.android.settings.MiuiValuePreference
            android:title="@string/full_screen_keyboard_optimization"
            android:key="miui_bottom_manager"
            android:fragment="com.android.settings.inputmethod.InputMethodFullScreenManager"/>
    </PreferenceCategory>
    <PreferenceCategory
        android:title="@string/game_controller_settings_category"
        android:key="game_controller_settings_category">
        <com.android.settingslib.miuisettings.preference.CheckBoxPreference
            android:title="@string/vibrate_input_devices"
            android:key="vibrate_input_devices"
            android:summaryOn="@string/vibrate_input_devices_summary"
            android:summaryOff="@string/vibrate_input_devices_summary"/>
    </PreferenceCategory>
    <com.android.settings.widget.WorkOnlyCategory
        android:title="@string/language_and_input_for_work_category_title"
        android:key="language_and_input_for_work_category"
        settings:searchable="false">
        <com.android.settingslib.miuisettings.preference.Preference
            android:title="@string/virtual_keyboards_for_work_title"
            android:key="virtual_keyboards_for_work_pref"
            android:fragment="com.android.settings.inputmethod.VirtualKeyboardFragment"
            settings:controller="com.android.settings.inputmethod.VirtualKeyboardForWorkPreferenceController"
            settings:forWork="true"/>
    </com.android.settings.widget.WorkOnlyCategory>
    <PreferenceCategory
        android:title="@string/other_input_settings"
        android:key="other_input_settings">
        <com.android.settingslib.miuisettings.preference.Preference
            android:persistent="false"
            android:title="@string/spellcheckers_settings_title"
            android:key="spellcheckers_settings"
            settingslib:showRightArrow="true"/>
        <com.android.settingslib.miuisettings.preference.Preference
            android:title="@string/autofill_app"
            android:key="default_autofill"
            android:fragment="com.android.settings.applications.defaultapps.DefaultAutofillPicker"
            settings:keywords="@string/autofill_keywords"/>
        <com.android.settingslib.miuisettings.preference.Preference
            android:title="@string/tts_settings_title"
            android:key="tts_settings"
            android:fragment="com.android.settings.tts.TextToSpeechSettings"/>
        <com.android.settingslib.miuisettings.preference.Preference
            android:title="@string/keyboard_mouse_touch"
            android:fragment="com.android.settings.inputmethod.PhysicalKeyboardFragment"/>
        <com.android.settingslib.miuisettings.preference.Preference
            android:title="@string/mechanical_ime"
            android:key="miui_mechanical_ime"
            android:summary="@string/mechanical_ime_hint"
            settings:controller="src.com.android.settings.inputmethod.MecBoardInputController"
            settingslib:showRightArrow="true"/>
    </PreferenceCategory>
</PreferenceScreen>
