<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:settings="http://schemas.android.com/apk/res/com.android.settings" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:key="notch_and_status_bar_settings">
    <PreferenceCategory
        android:title="@string/status_bar_settings_status_bar"
        android:key="settings_status_bar">
        <com.android.settingslib.miuisettings.preference.CheckBoxPreference
            android:persistent="false"
            android:title="@string/show_notification_icon_title"
            android:key="show_notification_icon"/>
        <com.android.settingslib.miuisettings.preference.CheckBoxPreference
            android:persistent="false"
            android:title="@string/status_bar_settings_notification_use_app_icon"
            android:key="notification_use_app_icon"/>
        <com.android.settingslib.miuisettings.preference.CheckBoxPreference
            android:persistent="false"
            android:title="@string/status_bar_settings_show_lte_for_4g"
            android:key="show_lte_for_4g"/>
        <com.android.settingslib.miuisettings.preference.CheckBoxPreference
            android:persistent="false"
            android:title="@string/show_network_speed_title"
            android:key="show_network_speed"/>
        <com.android.settingslib.miuisettings.preference.CheckBoxPreference
            android:persistent="false"
            android:title="@string/show_carrier_under_keyguard_title"
            android:key="show_carrier_under_keyguard"/>
        <com.android.settingslib.miuisettings.preference.ValuePreference
            android:persistent="false"
            android:title="@string/custom_carrier_title"
            android:key="custom_carrier"/>
        <miuix.preference.DropDownPreference
            android:title="@string/battery_indicator_title"
            android:key="battery_indicator"/>
        <com.android.settingslib.miuisettings.preference.ListPreference
            android:persistent="false"
            android:entries="@array/notification_shade_shortcut_entries"
            android:title="@string/notification_shade_shortcut_title"
            android:key="notification_shade_shortcut"
            android:entryValues="@array/notification_shade_shortcut_values"/>
    </PreferenceCategory>
    <PreferenceCategory
        android:title="@string/notch_settings"
        android:key="settings_notch">
        <PreferenceScreen
            android:title="@string/notch_style_mod_title"
            android:key="notch_style_mode"
            android:summary="@string/notch_style_mod_description"
            android:fragment="com.android.settings.InfinityDisplayStyleFragment"/>
        <com.android.settingslib.miuisettings.preference.CheckBoxPreference
            android:title="@string/notch_force_black_title"
            android:key="notch_force_black"
            android:summary="@string/notch_force_black_desc"/>
        <com.android.settingslib.miuisettings.preference.CheckBoxPreference
            android:title="@string/cutout_type_title"
            android:key="cutout_type"
            android:summary="@string/cutout_type_desc"/>
        <PreferenceScreen
            android:title="@string/cutout_mode_title"
            android:key="cutout_mode"
            android:fragment="com.android.settings.CutoutModeSettings"/>
    </PreferenceCategory>
</PreferenceScreen>
