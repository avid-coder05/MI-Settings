    android:layout_height="wrap_content">
    <com.android.settings.widget.ImagePreference
        android:title="@string/screen_projection_example_document_title"
        android:key="pref_key_screen_projection_example_document"
        android:summary="@string/screen_projection_example_document_summary"
        settings:image="@drawable/projection_example_document"/>
    <com.android.settings.widget.ImagePreference
        android:title="@string/screen_projection_example_game_title"
        android:key="pref_key_screen_projection_example_game"
        android:summary="@string/screen_projection_example_game_summary"
        settings:image="@drawable/projection_example_game"
        settings:second_title="@string/open_game_accelerate"/>
    <com.android.settings.widget.ImagePreference
        android:title="@string/screen_projection_example_gallery_title"
        android:key="pref_key_screen_projection_example_gallery"
