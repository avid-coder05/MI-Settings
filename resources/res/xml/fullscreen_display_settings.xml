<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:settings="http://schemas.android.com/apk/res/com.android.settings" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:miuisettings="http://schemas.android.com/apk/miuisettings" android:title="@string/infinity_display_settings">
    <PreferenceCategory
        android:title="@string/navigation_type_settings"
        android:key="navigation_type_category">
        <com.android.settingslib.miuisettings.preference.Preference android:layout="@layout/navigation_type_settings"/>
    </PreferenceCategory>
    <PreferenceCategory android:key="navigation_setting_category">
        <com.android.settingslib.miuisettings.preference.CheckBoxPreference
            android:title="@string/navigation_guide_hide_gesture_line_title"
            android:key="navigation_hide_gesture_line"
            android:summary="@string/navigation_guide_hide_gesture_line_summary"/>
        <com.android.settingslib.miuisettings.preference.CheckBoxPreference
            android:title="@string/fsg_mistake_touch_title"
            android:key="fsg_mistake_touch"
            android:summary="@string/fsg_mistake_touch_summary"/>
        <com.android.settingslib.miuisettings.preference.CheckBoxPreference
            android:title="@string/navigation_guide_appswitch_anim_title"
            android:key="navigation_appswitch_anim"
            android:summary="@string/navigation_guide_appswitch_anim_summary"/>
        <com.android.settingslib.miuisettings.preference.CheckBoxPreference
            android:title="@string/switch_screen_button_order"
            android:key="switch_screen_button_order"
            android:summary="@string/switch_screen_button_order_desc"/>
        <com.android.settingslib.miuisettings.preference.Preference
            android:title="@string/key_shortcut_settings_title"
            android:key="key_shortcut_settings"
            android:fragment="com.android.settings.KeyShortcutSettingsFragment"/>
        <com.android.settingslib.miuisettings.preference.Preference
            android:title="@string/auto_disable_screenbuttons_title"
            android:key="audo_disable_screen_buttons_settings"
            android:summary="@string/auto_disable_screenbuttons_summary"
            android:fragment="com.android.settings.AutoDisableScreenButtonsAppListSettings"/>
    </PreferenceCategory>
    <PreferenceCategory
        android:title="@string/navigation_guide_settings"
        android:key="navigation_guide_category">
        <com.android.settingslib.miuisettings.preference.Preference
            android:icon="@drawable/navigation_bar_guide_home"
            android:layout="@layout/navigation_guide_item"
            android:title="@string/navigation_guide_home_title"
            android:key="navigation_guide_home"
            android:summary="@string/navigation_guide_home_summary"
            miuisettings:showIcon="true"/>
        <com.android.settingslib.miuisettings.preference.Preference
            android:icon="@drawable/navigation_bar_guide_recent"
            android:layout="@layout/navigation_guide_item"
            android:title="@string/navigation_guide_recent_title"
            android:key="navigation_guide_recent"
            android:summary="@string/navigation_guide_recent_summary"
            miuisettings:showIcon="true"/>
        <com.android.settingslib.miuisettings.preference.Preference
            android:icon="@drawable/navigation_bar_guide_back"
            android:layout="@layout/navigation_guide_item"
            android:title="@string/navigation_guide_back_title"
            android:key="navigation_guide_back"
            android:summary="@string/navigation_guide_back_summary"
            miuisettings:showIcon="true"/>
        <com.android.settingslib.miuisettings.preference.Preference
            android:icon="@drawable/navigation_bar_guide_app"
            android:layout="@layout/navigation_guide_item"
            android:title="@string/navigation_guide_app_title"
            android:key="navigation_guide_app"
            android:summary="@string/navigation_guide_app_summary"
            miuisettings:showIcon="true"/>
        <com.android.settingslib.miuisettings.preference.Preference
            android:icon="@drawable/navigation_bar_guide_appswitch"
            android:layout="@layout/navigation_guide_item_without_arrow"
            android:title="@string/navigation_guide_appswitch_title"
            android:key="navigation_guide_appswitch"
            android:summary="@string/navigation_guide_appswitch_summary"
            miuisettings:showIcon="true"/>
        <com.android.settingslib.miuisettings.preference.Preference
            android:icon="@drawable/navigation_bar_guide_appswitch"
            android:layout="@layout/navigation_guide_item"
            android:title="@string/navigation_guide_app_quick_switch_title"
            android:key="navigation_guide_app_quick_switch"
            android:summary="@string/navigation_guide_app_quick_switch_summary"
            miuisettings:showIcon="true"/>
    </PreferenceCategory>
</PreferenceScreen>
