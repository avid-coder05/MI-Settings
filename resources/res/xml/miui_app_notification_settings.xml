            android:persistent="false"
            android:title="@string/allow_keyguard_title"
            android:key="allow_keyguard"
            android:summary="@string/allow_keyguard_summary"/>
        <com.android.settingslib.miuisettings.preference.CheckBoxPreference
            android:persistent="false"
            android:title="@string/allow_sound_title"
            android:key="allow_sound"/>
        <com.android.settingslib.miuisettings.preference.CheckBoxPreference
            android:persistent="false"
            android:title="@string/allow_vibrate_title"
            android:key="allow_vibrate"/>
        <com.android.settingslib.miuisettings.preference.CheckBoxPreference
            android:persistent="false"
            android:title="@string/allow_lights_title"
            android:key="allow_lights"/>
        <com.android.settingslib.miuisettings.preference.ValuePreference
            android:persistent="false"
            android:title="@string/visibility_override_title"
            android:key="visibility_override"/>
    </PreferenceCategory>
    <PreferenceCategory
        android:key="app_category"
        android:order="1000">
        <com.android.settingslib.miuisettings.preference.Preference
            android:persistent="false"
            android:title="@string/app_link_title"
            android:key="app_link"/>
    </PreferenceCategory>
</PreferenceScreen>
