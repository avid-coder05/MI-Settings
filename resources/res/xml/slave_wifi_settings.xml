<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android" xmlns:settings="http://schemas.android.com/apk/res-auto" android:title="@string/wifi_settings">
    <com.android.settings.wifi.LinkablePreference android:key="wifi_status_message"/>
    <com.android.settingslib.miuisettings.preference.CheckBoxPreference
        android:title="@string/dual_wifi"
        android:key="wifi_enable"
        android:order="1"/>
    <com.android.settingslib.miuisettings.preference.CheckBoxPreference
        android:title="@string/dual_wifi_auto_disable"
        android:key="wifi_slave_auto_disable"
        android:summary="@string/dual_wifi_auto_disable_summary"
        android:order="2"/>
    <PreferenceCategory
        android:key="connected_primary_wifi"
        android:order="3"/>
    <PreferenceCategory
        android:key="connected_access_point"
        android:order="4"/>
    <PreferenceCategory
        android:key="access_points"
        android:order="5"/>
    <com.android.settings.datausage.DataUsagePreference
        android:title="@string/wifi_data_usage"
        android:key="wifi_data_usage"/>
    <com.android.settingslib.widget.LayoutPreference
        android:layout="@layout/resetting_internet"
        android:title="@string/resetting_internet_text"
        android:selectable="false"
        android:key="resetting_your_internet"
        settings:allowDividerBelow="true"/>
    <com.android.settingslib.widget.LayoutPreference
        android:layout="@layout/airplane_mode_message_preference"
        android:title="@string/condition_airplane_title"
        android:selectable="false"
        android:key="airplane_mode_message"
        settings:allowDividerBelow="true"/>
    <PreferenceCategory
        android:layout="@layout/preference_category_no_label"
        android:title="@string/summary_placeholder"
        android:key="provider_model_mobile_network"
        settings:controller="com.android.settings.network.NetworkMobileProviderController"/>
    <PreferenceCategory
        android:layout="@layout/preference_category_no_label"
        android:key="first_access_points"/>
    <com.android.settingslib.miuisettings.preference.Preference
        android:title="@string/wifi_saved_access_points_label"
        android:key="saved_networks"
        android:fragment="com.android.settings.wifi.savedaccesspoints2.SavedAccessPointsWifiSettings2"/>
</PreferenceScreen>
